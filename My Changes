goto <BB no.> //simple statement

if (cond.)
	goto
else
	goto

rhs can be cond. expr - value


executable_statement_list: assignment_statement_list | assignment_statement_list GOTO
				| assignment_statement_list IF_STAT
                             | assignment_statement_list
                               RETURN
                             ;

assignment_statement : variable ’=’ variable ’;’
                              | variable ’=’ constant ’;’
                              | variable '=' cond_expr ';'


GO_TO : 'goto' < Name Integer_Name > ';'

IF_STAT : IF '(' cond_expr ')' GOTO ELSE GOTO

cond : e op e
e : Integer_num | variable | cond
 

